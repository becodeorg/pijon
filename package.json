{
  "name": "@becode/pijon",
  "version": "0.1.3",
  "description": "Pijon, the delivery man - File upload lambda preparator",
  "private": true,
  "scripts": {
    "lint": "npx eslint --fix --cache src",
    "build": "npx babel src --out-dir bin",
    "work": "npx babel src -w --out-dir bin",
    "upload:dev": "npx sls deploy",
    "upload:prod": "npx sls deploy --stage=production",
    "deploy:dev": "npx run-s build upload:dev",
    "deploy:prod": "npx run-s build upload:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becodeorg/pijon.git"
  },
  "author": "leny <leny@becode.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/becodeorg/pijon/issues"
  },
  "homepage": "https://github.com/becodeorg/pijon#readme",
  "lint-staged": {
    "*.yml": [
      "npx prettier --write",
      "git add"
    ],
    "*.json": [
      "npx prettier --write",
      "git add"
    ],
    "*.js": [
      "npx eslint --fix --cache",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@becode/eslint-config": "^0.5.2",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-unicorn": "^10.0.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "serverless": "^1.50.0",
    "serverless-domain-manager": "^3.3.0",
    "serverless-offline": "^5.10.1",
    "serverless-s3-local": "^0.5.0"
  },
  "dependencies": {
    "@sentry/node": "^5.6.2",
    "aws-sdk": "^2.517.0",
    "koa": "^2.8.1",
    "koa-body": "^4.1.1",
    "koa2-cors": "^2.0.6",
    "serverless-http": "^2.3.0",
    "uuid": "^3.3.3"
  }
}
